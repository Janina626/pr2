<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
    Formular-Demo mit verschiedenen FXML-Controls.
    Zeigt die deklarative UI-Definition und Controller-Binding.
-->

<VBox spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.bht.pr2.lession09.e03_fxml_controls.FormController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <!-- Titel -->
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Registrierungsformular"/>

    <!-- Formular-Bereich -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="80" prefWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
        </columnConstraints>

        <!-- Name -->
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" promptText="Vor- und Nachname"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- E-Mail -->
        <Label text="E-Mail:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" promptText="beispiel@email.de"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Land -->
        <Label text="Land:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="countryCombo" maxWidth="Infinity"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- AGB Checkbox -->
        <CheckBox fx:id="termsCheckBox" text="Ich akzeptiere die AGB"
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSubmit" text="Absenden"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button onAction="#handleClear" text="Loeschen"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-font-size: 12px;"/>

    <!-- Separator -->
    <Separator/>

    <!-- Eintraege-Liste -->
    <Label style="-fx-font-weight: bold;" text="Registrierte Eintraege:"/>

    <ListView fx:id="entriesList" prefHeight="150" VBox.vgrow="ALWAYS"/>

    <Button onAction="#handleRemove" text="Ausgewaehlten Eintrag entfernen"/>

</VBox>
